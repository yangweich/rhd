
#
# Setup Beaglebone Black to Ground Station, RHD part
# 
# Author: Peter Savnik
# 2015

clear

echo "\nSetup for Beaglebone Back to Ground Station, RHD part\n"

echo "Update Repos\n"
apt-get update
apt-get upgrade

echo "Installing packages\n"
apt-get install gcc g++ cmake libpng-dev ncurses-dev libsdl-dev libudev-dev -y
apt-get install libexpat-dev libreadline-dev libusb-dev lsof git -y

echo "Done!"
